<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ivanbiz.model.Murid" table="MURID">
        <id column="ID" name="id">
            <generator class="native"/>
        </id>
        <property column="NIM" name="NIM" type="string" length="10"/>
        <property column="NAMA" name="nama" type="string" length="30"/>
        <property column="EMAIL" name="email" type="string" length="10"/>
        <property column="ALAMAT" name="alamat" type="string" length="100"/>
        <property column="TELP" name="telp" type="string" length="20"/>
        <property column="HANDPHONE" name="handphone" type="string" length="20"/>
        <many-to-one column="BANK_ID" name="bank" class="com.ivanbiz.model.Bank" lazy="false"/>
        <property column="DATE" name="date" type="date"/>
    </class>
</hibernate-mapping>
